<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="@dimen/_80sdp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/img"
        android:src="@drawable/secure_it"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.docstamp.Utils.TTextView
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_below="@id/img"
        android:text="OTP Code"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/WHITE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.docstamp.Utils.TTextView
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/img"
        android:text="Type OTP that we have sent via SMS below"
        android:textStyle="normal"
        android:gravity="center"
        android:textSize="@dimen/_11ssp"
        android:textColor="@color/WHITE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">

        <com.docstamp.Utils.EEditText
            android:singleLine="true"
            android:id="@+id/edtno1"
            android:textStyle="bold"
            android:maxLength="1"
            android:textSize="@dimen/_14ssp"
            android:gravity="center"
            android:inputType="number"
            android:digits="0123456789"
            android:background="@drawable/curve_edittext"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50sdp" />
        <com.docstamp.Utils.EEditText
            android:singleLine="true"
            android:id="@+id/edtno2"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number"
            android:digits="0123456789"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/curve_edittext"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50sdp" />
        <com.docstamp.Utils.EEditText
            android:singleLine="true"
            android:id="@+id/edtno3"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="number"
            android:digits="0123456789"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/curve_edittext"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50sdp" />
        <com.docstamp.Utils.EEditText
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:id="@+id/edtno4"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="number"
            android:digits="0123456789"
            android:background="@drawable/curve_edittext"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50sdp" />
    </LinearLayout>

    <com.docstamp.Utils.TTextView
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_below="@id/img"
        android:text="@string/didn_t_receive_sms"
        android:textStyle="normal"
        android:gravity="center"
        android:textSize="@dimen/_11ssp"
        android:textColor="@color/WHITE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_40sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.docstamp.Utils.TTextView
        android:id="@+id/btnResend"
        android:textSize="@dimen/_10ssp"
        android:text="Resend SMS"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/WHITE"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/_5sdp"
        android:background="@drawable/whiteborder"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp" />
        <com.docstamp.Utils.TTextView
            android:textSize="@dimen/_10ssp"
            android:id="@+id/btnChangeNumber"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="Change Number"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/WHITE"
            android:layout_weight="1"
            android:background="@drawable/whiteborder"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp" />
    </LinearLayout>

</LinearLayout>